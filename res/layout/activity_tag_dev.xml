<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="16dp"
        android:onClick="recuperationControl"
        android:textOff="Ativar recuperação"
        android:textOn="Desativar recuperação" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/toggleButton2"
        android:layout_alignBottom="@+id/toggleButton2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:onClick="vigillanceControl"
        android:textOff="Ativar vigilância"
        android:textOn="Desativar vigilância" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo_01" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/toggleButton2"
        android:layout_below="@+id/imageView1"
        android:onClick="quitCallback"
        android:src="@drawable/quit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_marginLeft="19dp"
        android:onClick="infoCallback"
        android:src="@drawable/info" />

</RelativeLayout>